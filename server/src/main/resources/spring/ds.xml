<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="ragnarDs" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
		<property name="username" value="beeron" />
		<property name="password" value="beeron" />
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="testOnCreate" value="true" />
	</bean>

	<bean id="ragnarJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<constructor-arg ref="ragnarDs" />
	</bean>

</beans>